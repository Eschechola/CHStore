@{
    ViewBag.Title = "Login";
    ViewBag.PageCSS = "login.css";
}

<section class="login">
    <div class="login-content">
        <div class="login-image">
            <img src="~/images/home-bg.svg" />
        </div>

        <div class="login-fields">
            <form method="POST">
                <input type="text" name="login" class="input-form" placeholder="Digite seu email, senha ou CPF" />

                <input type="password" name="password" class="input-form mg-05" placeholder="Senha" />

                <button class="btn-send">Enviar</button>
            </form>
        </div>
    </div>
</section>