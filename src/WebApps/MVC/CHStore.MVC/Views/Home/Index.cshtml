@{
    ViewData["Title"] = "Home";
    ViewData["PageCSS"] = "home.css";
}

<section class="ch-home">
    <div class="ch-carousel">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://chstoremarketplace.blob.core.windows.net/chstorefiles/slide_background_1.jpg" alt="Carousel Background 1">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://chstoremarketplace.blob.core.windows.net/chstorefiles/slide_background_2.jpg" alt="Carousel Background 2">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://chstoremarketplace.blob.core.windows.net/chstorefiles/slide_background_3.jpg" alt="Carousel Background 3">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://chstoremarketplace.blob.core.windows.net/chstorefiles/slide_background_4.jpg" alt="Carousel Background 4">
                </div>
            </div>
        </div>
    </div>

    <div class="ch-showcase-title">
        <hr />
        <h4>NOVAS NO CATALOGO</h4>
        <hr />
    </div>

    <div class="ch-showcase">
        @for (int i = 0; i < 2; i++)
        {
            <div class="row">
                <div class="col ch-showcase-item">
                    <div class="ch-showcase-item-content">
                        <div class="ch-showcase-item-content-image">
                            <img src="https://www.proskins.gg/8799-home_default/awp-neo-noir-fn.jpg" />
                        </div>
                        <div class="ch-showcase-item-content-icons">
                            <div class="ch-showcase-item-content-icons-name">
                                <p>AWP NEO NOIR MW 0.10</p>
                            </div>
                            <div class="ch-showcase-item-content-icons-price">
                                <p>R$ 150,00</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col ch-showcase-item">
                    <div class="ch-showcase-item-content">
                        <div class="ch-showcase-item-content-image">
                            <img src="https://www.proskins.gg/8870-home_default/ak-47-imperatriz-mw.jpg" />
                        </div>
                        <div class="ch-showcase-item-content-icons">
                            <div class="ch-showcase-item-content-icons-name">
                                <p>AK-47 IMPERATRIZ FT 0.19</p>
                            </div>
                            <div class="ch-showcase-item-content-icons-price">
                                <p>R$ 136,00</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col ch-showcase-item">
                    <div class="ch-showcase-item-content">
                        <div class="ch-showcase-item-content-image">
                            <img src="https://www.proskins.gg/8868-home_default/desert-eagle-cadeia-de-caracteres-ft.jpg" />
                        </div>
                        <div class="ch-showcase-item-content-icons">
                            <div class="ch-showcase-item-content-icons-name">
                                <p>DESERT EAGLE CADEIA DE CARACTERES BS 0.55</p>
                            </div>
                            <div class="ch-showcase-item-content-icons-price">
                                <p>R$ 220,00</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="ch-showcase-title">
        <hr />
        <h4>HIGHTIERS</h4>
        <hr />
    </div>

    <div class="ch-showcase">
        @for (int i = 0; i < 2; i++)
        {
            <div class="row">
                <div class="col ch-showcase-item">
                    <div class="ch-showcase-item-content">
                        <div class="ch-showcase-item-content-image">
                            <img src="https://www.proskins.gg/4450-home_default/karambit-doppler-ruby-fn.jpg" />
                        </div>
                        <div class="ch-showcase-item-content-icons">
                            <div class="ch-showcase-item-content-icons-name">
                                <p>KARAMBIT DOPPLER RUBY FN 0.03</p>
                            </div>
                            <div class="ch-showcase-item-content-icons-price">
                                <p>R$ 32.000,00</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col ch-showcase-item">
                    <div class="ch-showcase-item-content">
                        <div class="ch-showcase-item-content-image">
