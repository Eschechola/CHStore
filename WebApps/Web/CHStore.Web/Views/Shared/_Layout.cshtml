<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>CHStore - @ViewBag.Title</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">

    <link href="~/css/global.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    @if (ViewBag.PageCSS != null)
    {
        <link href="~/css/@ViewBag.PageCSS" rel="stylesheet" />
    }
</head>
<body>
    <header class="ch-header">
        <div class="ch-header-logo">

        </div>

        <div class="ch-header-menu">
            <div class="ch-header-menu-item">
                <a href="/">HOME</a>
            </div>

            <div class="ch-header-menu-item">
                <a href="/products">PRODUCTS</a>
            </div>

            <div class="ch-header-menu-item">
                <a href="/contact">CONTACT</a>
            </div>

            <div class="ch-header-menu-item">
                <a href="/about">ABOUT</a>
            </div>

            <div class="ch-header-menu-separator-5"></div>

            <div class="ch-header-menu-item ch-header-icon">
                <i class="fas fa-search"></i>
            </div>

            <div class="ch-header-menu-item ch-header-icon">
                <span class="ch-cart-products-mount">1</span>
                <i class="fas fa-shopping-cart"></i>
            </div>

            <div class="ch-header-menu-item ch-header-icon">
                <span class="ch-cart-products-mount">1</span>
                <i class="fas fa-heart"></i>
            </div>

            <div class="ch-header-menu-item ch-header-icon">
                <i class="fas fa-user"></i>
            </div>

            <div class="ch-header-menu-separator-1-2"></div>
        </div>
    </header>


    <main class="ch-main">
        @RenderBody()
    </main>


    <footer class="ch-footer">
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
